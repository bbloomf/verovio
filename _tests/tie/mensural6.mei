<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
  <meiHead>
        <fileDesc>
            <titleStmt>
                <title>Options for appearence of mensural signs</title>
            </titleStmt>
            <pubStmt>
                <date>2018-07-03</date>
            </pubStmt>
            <notesStmt>
                <annot>Mensural notation offer various layout options for mensural signs.</annot>
            </notesStmt>
        </fileDesc>
        <encodingDesc>
            <appInfo>
                <application version="1.1">
                    <name>Verovio</name>
                </application>
            </appInfo>
        </encodingDesc>
