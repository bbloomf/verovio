<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
	<meiHead>
		<fileDesc>
			<titleStmt>
				<title>Beat repetition example (1)</title>
			</titleStmt>
			<pubStmt>
				<date>2017-05-04</date>
			</pubStmt>
			<notesStmt>
				<annot>Verovio supports beat repetition. The alignment of the beat repetition will not work with compound meters when the repeated
					beat duration does not correspond to the meter signature unit.</annot>
			</notesStmt>
		</fileDesc>
		<encodingDesc>
			<appInfo>
				<application version="2.0.0" label="2">
					<name>Verovio</name>
				</application>
			</appInfo>
		</encodingDesc>
	</meiHead>
	<music>
		<body>
			<mdiv>
				<score>
					<scoreDef meter.count="4" meter.unit="4">
						<staffGrp>
							<staffDef n="1" clef.line="2" clef.shape="G" lines="5"/>
						</staffGrp>
					</scoreDef>
					<section label="feature-example">
						<measure n="1">
							<staff n="1">
								<layer n="1">
									<chord dur="4">
										<note pname="f" oct="4"/>
										<note pname="a" oct="4"/>
										<note pname="c" oct="5"/>
									</chord>
									<beatRpt slash="1"/>
									<beatRpt slash="1"/>
									<beatRpt slash="1"/>
								</layer>
							</staff>
						</measure>
						<measure n="2">
							<staff n="1">
								<layer n="1">
									<beam>
										<chord dur="8">
											<note pname="f" oct="4"/>
											<note pname="a" oct="4"/>
										</chord>
										<chord dur="8">
											<note pname="c" oct="5"/>
											<note pname="a" oct="4"/>
										</chord>
									</beam>
									<beatRpt slash="1"/>
									<beatRpt slash="1"/>
									<beatRpt slash="1"/>
								</layer>
							</staff>
						</measure>
						<measure n="3">
							<staff n="1">
								<layer n="1">
									<beam>
										<note pname="f" oct="4" dur="2"/>
										<note pname="a" oct="4" dur="2"/>
										<note pname="c" oct="5" dur="2"/>
										<note pname="a" oct="4" dur="2"/>
									</beam>
									<beatRpt slash="2"/>
									<beatRpt slash="2"/>
									<beatRpt slash="2"/>
								</layer>
							</staff>
						</measure>
					</section>
				</score>
			</mdiv>
		</body>
	</music>
</mei>
