<?xml-model href="http://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
	<meiHead>
		<fileDesc>
			<titleStmt>
				<title>Chords: Alignment and justification</title>
			</titleStmt>
			<pubStmt>
				<date>2017-04-18</date>
			</pubStmt>
			<notesStmt>
				<annot>Verovio offers options to align the element "harm" representing a chord symbol in relation to the "tstamp" attribute.</annot>
			</notesStmt>
		</fileDesc>
		<encodingDesc>
			<appInfo>
				<application version="unknown">
					<name>Verovio</name>
				</application>
			</appInfo>
		</encodingDesc>
	</meiHead>
	<music>
		<body>
			<mdiv>
				<score>
					<scoreDef>
						<staffGrp>
							<staffDef n="1" clef.shape="G" clef.line="2" lines="5"/>
						</staffGrp>
					</scoreDef>
					<section>
						<measure n="1">
							<staff n="1">
								<layer n="1">
									<note dur="2" pname="f" oct="4"/>
									<note dur="2" pname="f" oct="4"/>
									<note dur="2" pname="f" oct="4"/>
								</layer>
							</staff>
							<harm tstamp="1">
								<rend halign="right">Right</rend>
							</harm>
							<harm tstamp="3">
								<rend halign="center">Cent.</rend>
							</harm>
							<harm tstamp="5">
								<rend halign="left">Left</rend>
							</harm>
						</measure>
					</section>
				</score>
			</mdiv>
		</body>
	</music>
</mei>
